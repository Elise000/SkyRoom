<div class="container">
	<h1><%= current_user.username %> PROFILE</h1>
	<% if current_user.fbpic %>
		<%= image_tag current_user.fbpic %>
	<% else %>
		<%= image_tag current_user.avatar_url(:display) %>
	<% end %>

	<%= link_to "Edit My Profile", edit_user_path %>

<div class="container">
	<h1>All your listings</h1>

	<% current_userc.listings.each do |l| %>
		<ul>
			<%= link_to l.listing_name, listing_path(@l, :id => l.id) %>
			<p><%= l.description %></p>
		</ul>
	<% end %>
</div>

<div class="container">
	<h1>All your bookings</h1>

<div>
	<% bookings = current_user.bookings %>
	<% bookings.each do |b| %>
		<%= b.listing.listing_name %> : 
		Check In Date: <%= b.checkin %>
		Check Out Date: <%= b.checkout %><br/>
	<% end %>
</div>
